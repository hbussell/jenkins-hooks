<VirtualHost *:80>
    ServerName {{ server_name }}
    ServerAdmin webmaster@localhost

    DocumentRoot {{ docroot }}
    <Directory {{ docroot }}>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride None
        Require all granted
        Order allow,deny
        allow from all
        <IfModule mod_rewrite.c>
            RewriteEngine On
            RewriteCond %{REQUEST_FILENAME} !-f
            RewriteRule ^(.*)$ /index.php [QSA,L]
        </IfModule>
    </Directory>
</VirtualHost>
